%h1 Login

= form_tag login_create_path do

  = label :user_id, :user_id, 'User-ID'
  = text_field :user, 'user_id', :id => 'login_user'
  
  = label :email, :email, 'E-Mail'
  = text_field :user, 'email', :id => 'login_email'
  
  = button_to 'Login to my account',  login_create_path, :method => :post, :id => 'login_submit'
  
  = link_to 'Sign-up for an account', new_user_path, :method => :get, :id => 'signup'